<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_layout_5_lv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/androidpic"
        />
    <LinearLayout
        android:id="@+id/ll_layout_5_lv_item_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_layout_2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_layout_5_lv_item_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text=""
            />
        <TextView
            android:id="@+id/tv_layout_5_lv_item_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:text="This is a description"
            />
    </LinearLayout>
</LinearLayout>